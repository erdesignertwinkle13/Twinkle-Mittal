<section class="wild-section">
  <!-- SECTION TITLE -->
  <h2 class="product-heading">
    {{ section.settings.heading }}
  </h2>

  <!-- IMAGE GRID -->
  <div class="wild-grid">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}

      <div class="wild-item" data-handle="{{ product.handle }}">
        <img
          src="{{ product.featured_image | img_url: '600x' }}"
          width=""
          height=""
          alt="{{ product.title }}"
          loading="lazy"
        >

        <button class="wild-plus open-popup">+</button>
      </div>
    {% endfor %}
  </div>
</section>

<!-- POPUP -->
<div id="popup" class="popup hidden">
  <div class="popup-box">
    <button id="close-popup" class="popup-close">✕</button>

    <div class="popup-layout">
      <div class="popup-image">
        <img id="popup-image" src="" alt="" height="" width="">
      </div>

      <div class="popup-content">
        <h2 id="popup-title"></h2>
        <p id="popup-price"></p>
        <p id="popup-desc"></p>
      </div>
    </div>


    <!-- SIZE (DROPDOWN) -->
    <div class="popup-option">
      <label>Size</label>
      <select id="color-select"></select>
    </div>
    <!-- COLOR (BUTTONS) -->
    <div class="popup-option">
      <label>Color</label>
      <div id="size-options" class="option-row"></div>
    </div>

    <!-- ADD TO CART -->
    <button id="add-to-cart" class="popup-atc">ADD TO CART <span>→</span></button>
  </div>
</div>

{% schema %}
{
  "name": "Custom Product Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Tisso vison in the wild"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select product"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Custom Product Grid"
    }
  ]
}
{% endschema %}
